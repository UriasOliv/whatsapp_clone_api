{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2016",
    "baseUrl": "./src",
    "typeRoots": ["./src/@types"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@/handleSystemError": ["utils/handleSystemErrors.ts"],
      "@/controllers/*": ["controllers/*"],
      "@/utils/*": ["utils/*"],
      "@/database/*": ["database/*"],
      "@/middlewares/*": ["middlewares/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
